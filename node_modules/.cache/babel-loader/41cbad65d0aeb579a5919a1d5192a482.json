{"ast":null,"code":"import axios from 'axios'; // import HelloWorld from './components/HelloWorld.vue'\n\nexport default {\n  data() {\n    return {\n      form: {\n        id: '',\n        name: ''\n      },\n      users: '',\n      updateSubmit: false\n    };\n  },\n\n  mounted() {\n    this.load();\n  },\n\n  methods: {\n    load() {\n      axios.post('http://localhost:3000/users/', this.form).then(() => {\n        this.load();\n        this.form.name = '';\n      });\n      axios.get('http://localhost:3000/users').then(res => {\n        this.users = res.data; //respon dari rest api dimasukan ke users\n      }).catch(err => {\n        console.log(err);\n      });\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAyBA,OAAOA,KAAP,MAAkB,OAAlB,C,CACA;;AAEA,eAAe;EACbC,IAAI,GAAE;IACJ,OAAM;MACFC,IAAI,EAAE;QACJC,EAAE,EAAE,EADA;QAEJC,IAAI,EAAE;MAFF,CADJ;MAKFC,KAAK,EAAE,EALL;MAMFC,YAAY,EAAE;IANZ,CAAN;EAQD,CAVY;;EAWbC,OAAO,GAAG;IACR,KAAKC,IAAL;EACD,CAbY;;EAcbC,OAAO,EAAE;IACPD,IAAI,GAAE;MACJR,KAAK,CAACU,IAAN,CAAW,8BAAX,EAA2C,KAAKR,IAAhD,EAAsDS,IAAtD,CAA2D,MAAM;QAC7D,KAAKH,IAAL;QACA,KAAKN,IAAL,CAAUE,IAAV,GAAiB,EAAjB;MACH,CAHD;MAIEJ,KAAK,CAACY,GAAN,CAAU,6BAAV,EAAyCD,IAAzC,CAA8CE,GAAE,IAAK;QACrD,KAAKR,KAAL,GAAaQ,GAAG,CAACZ,IAAjB,CADqD,CAC/B;MACvB,CAFC,EAECa,KAFD,CAESC,GAAD,IAAS;QACjBC,OAAO,CAACC,GAAR,CAAYF,GAAZ;MACD,CAJC;IAKJ;;EAXO;AAdI,CAAf","names":["axios","data","form","id","name","users","updateSubmit","mounted","load","methods","post","then","get","res","catch","err","console","log"],"sourceRoot":"","sources":["C:\\Users\\Salman Alfarisi\\democrud\\src\\App.vue"],"sourcesContent":["<template>\n  <div>\n    <ul v-for=\"user in users\" :key=\"user.id\">\n      <li>\n      <span>{{user.name}}</span> &#160;\n      </li>\n    </ul>\n  </div>\n  <!-- <img alt=\"Vue logo\" src=\"./assets/logo.png\">  -->\n  <HelloWorld msg=\"Welcome to Your Vue.js App\"/>\n\n    <form @submit.prevent=\"add\">\n        <input type=\"hidden\" v-model=\"form.id\">\n        <input type=\"text\" v-model=\"form.name\">\n        <button type=\"submit\" v-show=\"!updateSubmit\">add</button> <!-- jika tidak update maka tombol update tidak muncul --> \n        <button type=\"button\" v-show=\"updateSubmit\" @click=\"update(form)\">Update</button> <!-- jika tombol edit di klik maka tombol add akan berubah menjadi update -->\n        <li>\n            <span>{{user.name}}</span> &#160;\n            <button @click=\"edit(user)\">Edit</button> ||  <button @click=\"del(user)\">Delete</button>\n      </li>\n    </form>\n</template>\n\n<script>\n\nimport axios from 'axios'\n// import HelloWorld from './components/HelloWorld.vue'\n\nexport default {\n  data(){\n    return{\n        form: {\n          id: '',\n          name: ''\n        },\n        users: '',\n        updateSubmit: false\n    }\n  },\n  mounted() {\n    this.load()\n  },\n  methods: {\n    load(){\n      axios.post('http://localhost:3000/users/', this.form).then(() => {\n          this.load()\n          this.form.name = ''\n      })\n        axios.get('http://localhost:3000/users').then(res => {\n        this.users = res.data //respon dari rest api dimasukan ke users\n      }).catch ((err) => {\n        console.log(err);\n      })\n    }\n   }\n  }\n</script>\n\n<style>\n#app {\n  font-family: Avenir, Helvetica, Arial, sans-serif;\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n  text-align: center;\n  color: #2c3e50;\n  margin-top: 60px;\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}